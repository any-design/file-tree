{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "packages/env.d.ts",
    "packages/**/*",
    "packages/**/*.vue",
    "packages/**/*.ts",
    "examples/**/*",
    "dist/*.mjs",
    "dist/*.css"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"]
    }
  }
}
